{{#if logged_in}}
<div>
  <h1>Welcome {{name}}</h1>
</div>
{{/if}}

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create New Post:</h3>

    <form class="form new-post-form">
      <div class="form-group">
        <label for="post-name">post title:</label>
        <input class="form-input" type="text" id="post-name" name="post-name" />
      </div>
      
      <div class="form-group">
        <label for="post-content">content:</label>
        <textarea class="form-input" id="post-content" name="post-content"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary" id="submit">Submit</button>
      </div>
    </form>
  </div>
{{> postarray }}
<div>
  <button class="b-2 btn btn-primary position-absolute bottom-0 start-50 translate-middle-x" id="new-post">+ New Post</button>
</div>

<script src="/js/newPost.js"></script>