<!-- Loop over each post in the object array -->
{{#each posts as |post| }}
<div class="card">
  <div class="card-body">
    <h2 class="card-title">
      <a href="/post/{{post.id}}">{{post.title}}</a>
    </h2>
    <p class="card-text">
      {{post.content}}
    </p>
    <p>Posted by {{post.name}} on {{format_date post_date}}</p>
  </div>
</div>
{{/each}}